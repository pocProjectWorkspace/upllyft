# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://user:password@host:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://user:password@host:5432/postgres"

# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# ============================================
# JWT
# ============================================
JWT_SECRET=your-jwt-secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-jwt-refresh-secret
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# SESSION
# ============================================
SESSION_SECRET=your-session-secret

# ============================================
# OPENAI
# ============================================
OPENAI_API_KEY=sk-...
AI_MODEL=gpt-4o
AI_EMBEDDING_MODEL=text-embedding-3-large
AI_MAX_COMPLETION_TOKENS=1000
AI_TEMPERATURE=0.3

# ============================================
# ANTHROPIC
# ============================================
ANTHROPIC_API_KEY=sk-ant-...

# ============================================
# RATE LIMITING
# ============================================
AI_RATE_LIMIT_TTL=3600
AI_RATE_LIMIT_MAX=100
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ============================================
# REDIS (Optional)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# FILE UPLOAD
# ============================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx
UPLOAD_DEST=./uploads

# ============================================
# GOOGLE OAUTH
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_AUTH_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# ============================================
# EMAIL (mailersend | sendgrid | ses)
# ============================================
EMAIL_PROVIDER=mailersend

MAILERSEND_API_KEY=
MAILERSEND_SMTP_HOST=smtp.mailersend.net
MAILERSEND_SMTP_PORT=587
MAILERSEND_SMTP_USER=
MAILERSEND_SMTP_PASS=
MAILERSEND_FROM_EMAIL=noreply@upllyft.com
MAILERSEND_FROM_NAME=Upllyft Support

SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=
SENDGRID_FROM_NAME=Upllyft Support

# ============================================
# AWS SES (Optional)
# ============================================
AWS_SES_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SES_FROM_EMAIL=
AWS_SES_FROM_NAME=Upllyft Support

# ============================================
# STRIPE
# ============================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================
# SUPABASE
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# POST PROCESSING
# ============================================
POST_SAVE_TYPE=ASYNC
