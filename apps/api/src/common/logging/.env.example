# ================================================
# LOGGING CONFIGURATION
# ================================================
# This file documents all logging environment variables
# Add these to your .env file

# ------------------------------------------------
# GLOBAL SETTINGS
# ------------------------------------------------

# Master switch to enable/disable all logging
LOG_ENABLED=true

# Log level: debug, info, warn, error
# - debug: All logs (use in development)
# - info: Normal operations + warnings + errors (use in production)
# - warn: Only warnings and errors
# - error: Only errors
LOG_LEVEL=info

# ------------------------------------------------
# CLOUDWATCH SETTINGS
# ------------------------------------------------

# Enable CloudWatch logging (set to true in production)
ENABLE_CLOUDWATCH_LOGS=false

# CloudWatch Log Group (create this in AWS Console)
CLOUDWATCH_LOG_GROUP=/safehaven/api

# CloudWatch Log Stream (optional, defaults to date-based)
# CLOUDWATCH_LOG_STREAM=api-production

# AWS Region
AWS_REGION=ap-south-1

# AWS Credentials (or use IAM role on EC2/ECS)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# ------------------------------------------------
# CATEGORY TOGGLES
# ------------------------------------------------
# Enable/disable specific log categories
# Set to "false" to disable that category

# HTTP request/response logs
LOG_ENABLE_HTTP=true

# Authentication events (login, logout, register)
LOG_ENABLE_AUTH=true

# Email sending events
LOG_ENABLE_EMAIL=true

# Security events (password changes, suspicious activity)
LOG_ENABLE_SECURITY=true

# Business transactions (generic CRUD operations)
LOG_ENABLE_TRANSACTIONS=true

# Organization operations
LOG_ENABLE_ORGANIZATIONS=true

# Post operations (create, update, delete, publish)
LOG_ENABLE_POSTS=true

# Comment operations
LOG_ENABLE_COMMENTS=true

# Community operations (create, join, leave)
LOG_ENABLE_COMMUNITIES=true

# Event operations (calendar events)
LOG_ENABLE_EVENTS=true

# Question/Answer operations
LOG_ENABLE_QUESTIONS=true

# Error logs (always keep true!)
LOG_ENABLE_ERRORS=true

# ------------------------------------------------
# ADVANCED OPTIONS
# ------------------------------------------------

# Include request body in logs (WARNING: may contain PII)
LOG_INCLUDE_REQUEST_BODY=false

# Include response body in logs (WARNING: may contain PII)
LOG_INCLUDE_RESPONSE_BODY=false

# Log slow requests that exceed threshold
LOG_SLOW_REQUESTS=true

# Slow request threshold in milliseconds
LOG_SLOW_REQUEST_THRESHOLD=1000

# Sample rate: 0-100 (percentage of requests to log)
# Use 100 to log all requests
# Use lower values in high-traffic production to reduce log volume
LOG_SAMPLE_RATE=100

# ================================================
# EXAMPLE CONFIGURATIONS
# ================================================

# --- DEVELOPMENT (verbose) ---
# LOG_LEVEL=debug
# LOG_ENABLE_HTTP=true
# ENABLE_CLOUDWATCH_LOGS=false
# LOG_SAMPLE_RATE=100

# --- PRODUCTION (essential logs only) ---
# LOG_LEVEL=info
# LOG_ENABLE_HTTP=false  # Disable to reduce volume
# ENABLE_CLOUDWATCH_LOGS=true
# LOG_SAMPLE_RATE=10     # Only log 10% of requests

# --- DEBUGGING AUTH ISSUES ---
# LOG_ENABLE_AUTH=true
# LOG_ENABLE_SECURITY=true
# LOG_LEVEL=debug

# --- DEBUGGING EMAIL ISSUES ---
# LOG_ENABLE_EMAIL=true
# LOG_LEVEL=debug
