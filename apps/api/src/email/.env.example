# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# Choose your email provider: sendgrid | ses | mailersend
EMAIL_PROVIDER=sendgrid

# Generic sender configuration (fallback for all providers)
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME=Upllyft

# ===========================================
# SENDGRID CONFIGURATION
# ===========================================
SENDGRID_API_KEY=SG.your-api-key-here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Upllyft

# ===========================================
# AMAZON SES CONFIGURATION
# ===========================================
# AWS Region where SES is configured
AWS_SES_REGION=us-east-1

# Option 1: Explicit credentials (for local development or non-AWS deployments)
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# Option 2: IAM Role (for EC2, ECS, Lambda - leave credentials empty)
# The SDK will automatically use the IAM role attached to the compute resource

# SES-specific sender (optional, falls back to EMAIL_FROM_ADDRESS)
AWS_SES_FROM_EMAIL=noreply@yourdomain.com
AWS_SES_FROM_NAME=Upllyft

# ===========================================
# MAILERSEND CONFIGURATION
# ===========================================
MAILERSEND_API_KEY=mlsn.your-api-key-here

# MailerSend-specific sender (optional, falls back to EMAIL_FROM_ADDRESS)
MAILERSEND_FROM_EMAIL=noreply@yourdomain.com
MAILERSEND_FROM_NAME=Upllyft

# ===========================================
# APPLICATION URLS
# ===========================================
FRONTEND_URL=https://app.yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com
